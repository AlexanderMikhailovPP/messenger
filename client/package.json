{
  "name": "corpmessenger",
  "productName": "CorpMessenger",
  "private": true,
  "version": "1.5.0",
  "description": "Corporate Messenger Desktop App",
  "author": "CorpMessenger Team",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder --mac",
    "electron:build:dmg": "npm run build && electron-builder --mac dmg",
    "electron:build:all": "npm run build && electron-builder --mac --win"
  },
  "build": {
    "appId": "com.corpmessenger.app",
    "productName": "CorpMessenger",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "public/icon.icns",
      "darkModeSupport": true
    },
    "dmg": {
      "title": "CorpMessenger",
      "icon": "public/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^1.7.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.0",
    "emoji-picker-react": "^4.16.1",
    "lucide-react": "^0.555.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.26.0",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "postcss": "^8.5.6",
    "sharp": "^0.33.0",
    "tailwindcss": "^3.4.18",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  }
}
